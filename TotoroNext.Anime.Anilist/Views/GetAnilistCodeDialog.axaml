<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:u="https://irihi.tech/ursa"
             xmlns:viewModels="clr-namespace:TotoroNext.Anime.Anilist.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="viewModels:GetAnilistTokenDialogViewModel"
             x:Class="TotoroNext.Anime.Anilist.Views.GetAnilistTokenDialog">
    <u:Form>
        <TextBox Text="{Binding Token}" u:FormItem.Label="Code" 
                 VerticalContentAlignment="Top"
                 Width="400" 
                 Height="300"
                 TextWrapping="Wrap" AcceptsReturn="True"/>
    </u:Form>
</UserControl>
