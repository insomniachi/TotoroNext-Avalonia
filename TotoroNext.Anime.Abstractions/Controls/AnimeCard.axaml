<UserControl
    x:Class="TotoroNext.Anime.Abstractions.Controls.AnimeCard"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="400"
    xmlns:ail="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
    xmlns:local="using:TotoroNext.Anime.Abstractions.Controls"
    xmlns:iconPacks="https://github.com/MahApps/IconPacks.Avalonia"
    xmlns:converters="clr-namespace:TotoroNext.Anime.Abstractions"
    PointerEntered="InputElement_OnPointerEntered"
    PointerExited="InputElement_OnPointerExited">
    
    <Border CornerRadius="8"
            BorderBrush="{DynamicResource SemiColorBorder}"
            ClipToBounds="True"
            Background="Transparent"
            BorderThickness="1">
        <Grid RowDefinitions="*,Auto" x:Name="MainContent">
            <Grid x:Name="ImageContainer" Grid.RowSpan="2">
                <Grid.Effect>
                    <BlurEffect Radius="0">
                        <BlurEffect.Transitions>
                            <Transitions>
                                <DoubleTransition Property="Radius" Duration="0:0:0.45" Easing="CubicEaseInOut" />
                            </Transitions>
                        </BlurEffect.Transitions>
                    </BlurEffect>
                </Grid.Effect>
                
                <Image Stretch="UniformToFill"
                       ail:ImageLoader.Source="{Binding $parent[local:AnimeCard].Anime.Image}"
                       x:Name="ImageControl" />

                <Border Background="#AA000000" x:Name="Tint" IsVisible="False" />
            </Grid>
            <Border
                x:Name="StatusBorder"
                x:FieldModifier="public"
                Grid.Row="1"
                Height="60"
                ClipToBounds="True"
                Padding="6 3"
                Background="#AA000000"
                BorderThickness="0,4,0,0">
                <Grid RowDefinitions="Auto, *">
                    <Border x:Name="TitleBorder" Height="54" VerticalAlignment="Stretch">
                        <TextBlock
                            x:Name="TitleTextBlock"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            FontSize="15"
                            TextAlignment="Center"
                            Text="{Binding $parent[local:AnimeCard].Anime.Title, Mode=OneWay}"
                            TextTrimming="CharacterEllipsis"
                            ToolTip.Tip="{Binding $parent[local:AnimeCard].Anime.Title, Mode=OneWay}" />
                    </Border>
                    <Grid Grid.Row="1" RowDefinitions="*, Auto">
                        <StackPanel Grid.Row="0" Spacing="4" HorizontalAlignment="Stretch" Margin="8">
                            <TextBlock x:Name="NextEpText"
                                       FontSize="13"
                                       HorizontalAlignment="Center"
                                       FontStyle="Italic"
                                       Foreground="{DynamicResource SemiColorText3}"/>

                            <Button HorizontalAlignment="Stretch"
                                    Command="{Binding $parent[local:AnimeCard].WatchCommand}"
                                    CommandParameter="{Binding $parent[local:AnimeCard].Anime}"
                                    IsVisible="{Binding $parent[local:AnimeCard].Anime, Converter={x:Static converters:Converters.HasAiredConverter}}">
                                <StackPanel Spacing="8" Orientation="Horizontal">
                                    <TextBlock Text="Watch" VerticalAlignment="Center" />
                                    <iconPacks:PackIconControl
                                        Kind="{x:Static iconPacks:PackIconBootstrapIconsKind.Play}"
                                        Height="15" Width="11"
                                        VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>
                            <Button Command="{Binding $parent[local:AnimeCard].SearchTorrentsCommand}"
                                    CommandParameter="{Binding $parent[local:AnimeCard].Anime}"
                                    IsVisible="{Binding $parent[local:AnimeCard].Anime, Converter={x:Static converters:Converters.HasAiredConverter}}"
                                    HorizontalAlignment="Stretch">
                                <StackPanel Spacing="8" Orientation="Horizontal">
                                    <TextBlock Text="Torrent" VerticalAlignment="Center" />
                                    <iconPacks:PackIconControl
                                        Kind="{x:Static iconPacks:PackIconBootstrapIconsKind.Play}"
                                        Height="15" Width="11"
                                        VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>
                            <Button Content="Details"
                                    HorizontalAlignment="Stretch"
                                    Command="{Binding $parent[local:AnimeCard].DetailsCommand}"
                                    CommandParameter="{Binding $parent[local:AnimeCard].Anime}" />
                        </StackPanel>

                        <Border Grid.Row="1" Padding="4">
                            <Grid
                                IsVisible="{Binding $parent[local:AnimeCard].Anime, Converter={x:Static converters:Converters.HasAiredConverter}}">
                                <StackPanel Orientation="Horizontal" Spacing="8" Margin="4" HorizontalAlignment="Left">
                                    <Button CornerRadius="30" Height="30" Width="30" Click="OnEditClicked"
                                            IsVisible="{Binding $parent[local:AnimeCard].Anime.Tracking, Converter={x:Static ObjectConverters.IsNotNull}}">
                                        <Viewbox Height="12" Width="12">
                                            <iconPacks:PackIconControl
                                                Kind="{x:Static iconPacks:PackIconMaterialDesignKind.Edit}" />
                                        </Viewbox>
                                    </Button>
                                    <Button CornerRadius="30" Height="30" Width="30"
                                            Command="{Binding $parent[local:AnimeCard].AddToListCommand}"
                                            CommandParameter="{Binding $parent[local:AnimeCard].Anime}"
                                            IsVisible="{Binding $parent[local:AnimeCard].Anime.Tracking, Converter={x:Static ObjectConverters.IsNull}}">
                                        <Viewbox Height="12" Width="12">
                                            <iconPacks:PackIconControl
                                                Kind="{x:Static iconPacks:PackIconMaterialDesignKind.Add}" />
                                        </Viewbox>
                                    </Button>

                                    <Border BorderBrush="{DynamicResource ButtonDefaultBorderBrush}"
                                            BorderThickness="{DynamicResource ButtonBorderThickness}"
                                            CornerRadius="20"
                                            Padding="8 4"
                                            Background="{DynamicResource ButtonDefaultBackground}">
                                        <StackPanel Spacing="4" Orientation="Horizontal">
                                            <iconPacks:PackIconControl
                                                Kind="{x:Static iconPacks:PackIconMaterialDesignKind.Star}" Height="12"
                                                Width="12"
                                                Foreground="{DynamicResource ButtonDefaultPrimaryForeground}"
                                                VerticalAlignment="Center" HorizontalAlignment="Center" />
                                            <TextBlock
                                                Text="{Binding $parent[local:AnimeCard].Anime.MeanScore, Mode=OneWay}"
                                                Foreground="{DynamicResource ButtonDefaultPrimaryForeground}"
                                                VerticalAlignment="Center"
                                                FontSize="13"
                                                FontWeight="Bold" />
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8" Margin="4">
                                    <Button CornerRadius="30" Height="30" Width="30" Click="OnDownloadClicked">
                                        <Viewbox Height="12" Width="12">
                                            <iconPacks:PackIconControl
                                                Kind="{x:Static iconPacks:PackIconMaterialDesignKind.Download}" />
                                        </Viewbox>
                                    </Button>
                                    <Button CornerRadius="30" Height="30" Width="30"
                                            Command="{Binding $parent[local:AnimeCard].SettingsCommand}"
                                            CommandParameter="{Binding $parent[local:AnimeCard].Anime}">
                                        <Viewbox Height="12" Width="12">
                                            <iconPacks:PackIconControl
                                                Kind="{x:Static iconPacks:PackIconMaterialDesignKind.Settings}" />
                                        </Viewbox>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>

</UserControl>