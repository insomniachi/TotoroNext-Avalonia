<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:TotoroNext.Anime.ViewModels"
             xmlns:am="using:TotoroNext.Anime"
             xmlns:u="https://irihi.tech/ursa"
             xmlns:aa="using:TotoroNext.Anime.Abstractions.Models"
             xmlns:module="clr-namespace:TotoroNext.Module;assembly=TotoroNext.Module"
             xmlns:ac="clr-namespace:TotoroNext.Anime.Abstractions.Controls;assembly=TotoroNext.Anime.Abstractions"
             xmlns:behaviors="clr-namespace:TotoroNext.Anime.Abstractions.Behaviors;assembly=TotoroNext.Anime.Abstractions"
             mc:Ignorable="d" d:DesignWidth="1080" d:DesignHeight="1920"
             x:DataType="vm:AdvancedSearchViewModel"
             x:Class="TotoroNext.Anime.Views.AdvancedSearchView">
    <Grid ColumnDefinitions="*,300"
          ColumnSpacing="16">
        <ScrollViewer Grid.Column="1">
            <u:Form
                HorizontalAlignment="Stretch">
                <u:Form.Styles>
                    <Style Selector="u|FormItem">
                        <Setter Property="Margin" Value="16 16 16 0 " />
                    </Style>
                    <Style Selector="u|Form > u|FormItem:nth-child(1)">
                        <Setter Property="Margin" Value="16 16 16 0" />
                    </Style>
                    <Style Selector="u|Form > u|FormItem:nth-last-child(1)">
                        <Setter Property="Margin" Value="16 32 16 0" />
                    </Style>
                </u:Form.Styles>
                <u:FormItem Label="Metadata Source" Margin="16 16 16  0">
                    <ComboBox ItemsSource="{Binding MetadataServices}"
                              SelectedItem="{Binding SelectedService}"
                              DisplayMemberBinding="{Binding Name}"
                              HorizontalAlignment="Stretch" />
                </u:FormItem>
                <u:FormItem Label="Name">
                    <TextBox Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </u:FormItem>
                <u:Form.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Background="{DynamicResource SemiColorTertiaryLightActive}" />
                    </ItemsPanelTemplate>
                </u:Form.ItemsPanel>
                <u:FormItem Label="Season Name">
                    <u:EnumSelector EnumType="{x:Type aa:AnimeSeason}"
                                    Value="{Binding Season, Mode=TwoWay}"
                                    DisplayDescription="True"
                                    HorizontalAlignment="Stretch" />
                </u:FormItem>
                <u:FormItem Label="Released On Or After Year">
                    <u:NumericIntUpDown Value="{Binding MinimumYear, Mode=TwoWay}"
                                        Maximum="{Binding CurrentYear, Mode=OneTime}"
                                        HorizontalAlignment="Stretch" />
                </u:FormItem>
                <u:FormItem Label="Released On Or Before Year">
                    <u:NumericIntUpDown Value="{Binding MaximumYear, Mode=TwoWay}"
                                        Maximum="{Binding CurrentYear, Mode=OneTime}"
                                        HorizontalAlignment="Stretch" />
                </u:FormItem>
                <u:FormItem Label="Include">
                    <u:MultiAutoCompleteBox HorizontalAlignment="Stretch"
                                            ItemsSource="{Binding AllGenres}"
                                            SelectedItems="{Binding IncludedGenres}" />
                </u:FormItem>
                <u:FormItem Label="Exclude">
                    <u:MultiAutoCompleteBox HorizontalAlignment="Stretch"
                                            ItemsSource="{Binding AllGenres}"
                                            SelectedItems="{Binding ExcludedGenres}" />
                </u:FormItem>

                <u:FormItem Label="Minimum Score">
                    <u:NumericFloatUpDown Value="{Binding MinimumScore, Mode=TwoWay}"
                                          Maximum="10"
                                          Minimum="0" />
                </u:FormItem>
                <u:FormItem Label="Maximum Score">
                    <u:NumericFloatUpDown Value="{Binding MaximumScore, Mode=TwoWay}"
                                          Maximum="10"
                                          Minimum="0" />
                </u:FormItem>

                <Button Content="Clear"
                        Command="{Binding ClearSearchFiltersCommand}"
                        Theme="{DynamicResource SolidButton}"
                        u:FormItem.NoLabel="True" HorizontalAlignment="Stretch" />
            </u:Form>
        </ScrollViewer>

        <u:LoadingContainer Grid.Column="0"
                            Background="Transparent"
                            VerticalContentAlignment="Stretch"
                            HorizontalContentAlignment="Stretch">
            <ScrollViewer>
                <ItemsControl ItemsSource="{Binding Anime, Mode=OneWay}"
                              module:Animations.ItemsReorderAnimationDuration="0:0:0.400">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <u:ElasticWrapPanel
                                ItemHeight="400"
                                ItemWidth="250"
                                IsFillHorizontal="True" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ac:AnimeCard Anime="{Binding}"
                                          Margin="8"
                                          HasDetailsPane="True"
                                          DetailsCommand="{x:Static am:Commands.DetailsCommand}"
                                          WatchCommand="{x:Static am:Commands.WatchCommand}"
                                          SettingsCommand="{x:Static am:Commands.SettingsCommand}"
                                          SearchTorrentsCommand="{x:Static am:Commands.SearchTorrentsCommand}"
                                          AddToListCommand="{x:Static am:Commands.AddToListCommand}"
                                          ShowCompletedStatus="True">
                                <Interaction.Behaviors>
                                    <behaviors:AiringStatusBehavior />
                                    <behaviors:ListStatusBehavior />
                                </Interaction.Behaviors>
                            </ac:AnimeCard>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </u:LoadingContainer>
    </Grid>
</UserControl>