<UserControl
    x:Class="TotoroNext.Anime.Views.UserListView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctl="totoro.next/controls"
    xmlns:bhvr="totoro.next/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="https://github.com/MahApps/IconPacks.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:conv="totoro.next/converters"
    xmlns:u="https://irihi.tech/ursa"
    xmlns:vm="using:TotoroNext.Anime.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:UserListViewModel"
    mc:Ignorable="d">
    <UserControl.Resources>
        <conv:EnumDescriptionConverter x:Key="EnumDescriptionConverter" />
    </UserControl.Resources>
    
    <Grid RowDefinitions="Auto, *" RowSpacing="16">
        <StackPanel
            HorizontalAlignment="Center"
            Orientation="Horizontal"
            Spacing="18"
            IsVisible="{Binding !NothingToSee}">
            <u:SelectionList ItemsSource="{Binding AllStatus}" SelectedItem="{Binding Filter.Status}">
                <u:SelectionList.ItemTemplate>
                    <DataTemplate>
                        <Label Content="{Binding ., Converter={StaticResource EnumDescriptionConverter}}" />
                    </DataTemplate>
                </u:SelectionList.ItemTemplate>
                <u:SelectionList.Styles>
                    <Style Selector="u|SelectionListItem">
                        <Setter Property="Classes.Large" Value="true" />
                        <Setter Property="Width" Value="175" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                    </Style>
                </u:SelectionList.Styles>
                <u:SelectionList.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </u:SelectionList.ItemsPanel>
            </u:SelectionList>
            <SplitButton Height="40" Command="{Binding OpenFilterPaneCommand}">
                <SplitButton.Content>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <iconPacks:PackIconControl
                                Width="20"
                                Height="20"
                                Kind="{x:Static iconPacks:PackIconLucideKind.ArrowUpDown}" />
                            <iconPacks:PackIconControl
                                Width="20"
                                Height="20"
                                Kind="{x:Static iconPacks:PackIconBootstrapIconsKind.Filter}" />
                        </StackPanel>
                        <TextBlock VerticalAlignment="Center" Text="Sort &amp; Filter" />
                    </StackPanel>
                </SplitButton.Content>
                <SplitButton.Flyout>
                    <MenuFlyout>
                        <MenuItem
                            Command="{Binding ClearFiltersCommand}"
                            Header="Clear"
                            Icon="{iconPacks:MaterialDesign Kind=ClearAll}" />
                    </MenuFlyout>
                </SplitButton.Flyout>
            </SplitButton>
            <Button Command="{Binding ExportListCommand}"
                    IsVisible="{Binding IsLocalTracker}"
                    Content="Export"
                    Height="40" />
        </StackPanel>

        <u:LoadingContainer
            Grid.Row="1"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            Background="Transparent"
            IsLoading="{Binding IsLoading}"
            IsVisible="{Binding !NothingToSee}">
            <ScrollViewer
                u:ScrollTo.Direction="Top"
                Classes.InsetContent="True">
                <ItemsRepeater
                    Margin="16,0"
                    ItemsSource="{Binding Anime}">
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate>
                            <ctl:AnimeCard Anime="{Binding}">
                                <Interaction.Behaviors>
                                    <bhvr:InteractiveCardControlsBehavior />
                                    <bhvr:NextEpisodeTimeBehavior />
                                    <bhvr:UnwatchedEpisodesBadgeBehavior />
                                    <bhvr:AiringStatusBehavior />
                                </Interaction.Behaviors>
                            </ctl:AnimeCard>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                    <ItemsRepeater.Layout>
                        <UniformGridLayout
                            ItemsJustification="Start"
                            ItemsStretch="Fill"
                            MinColumnSpacing="32"
                            MinItemHeight="400"
                            MinItemWidth="250"
                            MinRowSpacing="32" />
                    </ItemsRepeater.Layout>
                </ItemsRepeater>
            </ScrollViewer>
        </u:LoadingContainer>

        <StackPanel Grid.Row="0"
                    Grid.RowSpan="2"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    IsVisible="{Binding NothingToSee}">
            <Image Source="/Assets/nothingtoseehere_transparent_small.png"
                   Stretch="Uniform"
                   Height="300" />
            <TextBlock Text="No tracking services authenticated, please authenticate and choose a default tracker."
                       HorizontalAlignment="Center"
                       Foreground="{DynamicResource TextBlockQuaternaryForeground}"
                       FontSize="{DynamicResource SemiFontSizeHeader4}"
                       Margin="0 12 0 0 " />
        </StackPanel>
    </Grid>

</UserControl>