<UserControl
    x:Class="TotoroNext.Anime.Views.SearchView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:TotoroNext.Anime.ViewModels"
    xmlns:mod="using:TotoroNext.Module"
    xmlns:ac="using:TotoroNext.Anime.Abstractions.Controls"
    x:DataType="vm:SearchViewModel"
    xmlns:panels="clr-namespace:Avalonia.Labs.Panels;assembly=Avalonia.Labs.Panels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    
    <Design.DataContext>
        <vm:SearchViewModel/>
    </Design.DataContext>

    <Grid RowSpacing="8" RowDefinitions="Auto, *">
        
        <TextBox Watermark="Search"
                 Text="{Binding Query}"/>
        
        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding Items}"
                          mod:Animations.ItemsReorderAnimationDuration="0:0:0.400">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <panels:FlexPanel 
                            JustifyContent="FlexStart"  
                            AlignContent="FlexStart"
                            AlignItems="FlexEnd"
                            Wrap="Wrap"
                            ColumnSpacing="16"
                            RowSpacing="16"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ac:AnimeCard Anime="{Binding}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
    </Grid>

</UserControl>
