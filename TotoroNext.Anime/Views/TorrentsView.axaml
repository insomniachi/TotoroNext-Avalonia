<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:TotoroNext.Anime.ViewModels"
             xmlns:u="https://irihi.tech/ursa"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             Width="750"
             Height="700"
             x:DataType="viewModels:TorrentsViewModel"
             x:Class="TotoroNext.Anime.Views.TorrentsView">
    <Grid RowDefinitions="Auto, *, Auto" RowSpacing="16">
        <u:Form LabelPosition="Top" HorizontalAlignment="Stretch">
            <TextBox Text="{Binding Title}" u:FormItem.Label="Title"
                     HorizontalAlignment="Stretch" />
            <ComboBox Text="{Binding ReleaseGroup}"
                      ItemsSource="{Binding ReleaseGroups}"
                      IsEditable="True"
                      u:FormItem.Label="Group"
                      HorizontalAlignment="Stretch" />
            <ComboBox Text="{Binding Quality}"
                      ItemsSource="{Binding Qualities}"
                      HorizontalAlignment="Stretch"
                      IsEditable="True"
                      u:FormItem.Label="Resolution" />
            <u:Form.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="3" ColumnSpacing="8" RowSpacing="8" />
                </ItemsPanelTemplate>
            </u:Form.ItemsPanel>
        </u:Form>
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Torrents}"
                  GridLinesVisibility="All"
                  AutoGenerateColumns="False"
                  CanUserReorderColumns="False"
                  CanUserResizeColumns="False"
                  CanUserSortColumns="True"
                  IsReadOnly="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Binding="{Binding IsSelected, Mode=TwoWay}"
                                        IsThreeState="False"
                                        IsReadOnly="False"
                                        CanUserSort="False">
                    <DataGridCheckBoxColumn.HeaderTemplate>
                        <DataTemplate>
                            <CheckBox
                                Command="{Binding $parent[DataGrid].((viewModels:TorrentsViewModel)DataContext).ToggleSelectAllCommand, FallbackValue={x:Null}}"
                                Margin="12 0 0 0" />
                        </DataTemplate>
                    </DataGridCheckBoxColumn.HeaderTemplate>
                </DataGridCheckBoxColumn>
                <DataGridTemplateColumn IsReadOnly="True"
                                        Header="Title"
                                        Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Value.Title}"
                                       ToolTip.Tip="{Binding Value.Title}"
                                       VerticalAlignment="Center"
                                       TextTrimming="CharacterEllipsis"
                                       Margin="12 0" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn IsReadOnly="True"
                                    Header="S"
                                    Binding="{Binding Value.Seeders}" />
                <DataGridTextColumn IsReadOnly="True"
                                    Header="D"
                                    Binding="{Binding Value.Downloads}" />
                <DataGridTextColumn Header="Size"
                                    Binding="{Binding Value.Size}" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2"
                    Margin="0 10 0 0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Spacing="8">
            <Button Content="Download"
                    Command="{Binding DownloadCommand}"
                    IsVisible="False" />
            <Button Content="Stream"
                    Command="{Binding StreamCommand}" />
        </StackPanel>
    </Grid>
</UserControl>