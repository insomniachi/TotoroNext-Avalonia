<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:module="clr-namespace:TotoroNext.Module;assembly=TotoroNext.Module"
             xmlns:u="https://irihi.tech/ursa"
             xmlns:viewModels="clr-namespace:TotoroNext.ViewModels"
             xmlns:ail="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="viewModels:StoreViewModel"
             x:Class="TotoroNext.Views.StoreView">
    <Grid ColumnDefinitions="200,*" ColumnSpacing="10">
        <u:SelectionList ItemsSource="{Binding FilterTags}"
                         SelectedItem="{Binding SelectedFilterTag}" />
        <ScrollViewer Grid.Column="1">
            <ItemsControl ItemsSource="{Binding Modules}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid RowDefinitions="Auto,Auto" Margin="16"
                              module:ControlExtensions.TappedCommand="{Binding $parent[ItemsControl].((viewModels:StoreViewModel)DataContext).DownloadModuleCommand, FallbackValue={x:Null}}">
                            <Image Height="200" ail:ImageLoader.Source="{Binding ImageUrl}" />
                            <StackPanel Grid.Row="1">
                                <TextBlock Text="{Binding Name}" />
                                <TextBlock Text="{Binding Description}"
                                           Height="50"
                                           TextTrimming="{x:Static TextTrimming.WordEllipsis}"
                                           TextWrapping="Wrap" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <u:ElasticWrapPanel IsFillHorizontal="True" ItemWidth="300" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
    </Grid>

</UserControl>