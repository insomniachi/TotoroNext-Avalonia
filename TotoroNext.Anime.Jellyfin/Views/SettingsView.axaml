<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:u="https://irihi.tech/ursa"
             xmlns:viewModels="clr-namespace:TotoroNext.Anime.Jellyfin.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="viewModels:SettingsViewModel"
             x:Class="TotoroNext.Anime.Jellyfin.Views.SettingsView">
    <Grid RowDefinitions="Auto,*" RowSpacing="16">
        <Image Grid.Row="0"
               Source="avares://TotoroNext.Anime.Jellyfin/Assets/jellyfin.jpg"
               Stretch="UniformToFill"
               Width="600" />
        <u:Form Grid.Row="1" HorizontalAlignment="Stretch">
            <TextBox Text="{Binding ServerUrl}" u:FormItem.Label="Server Url"/>
            <TextBox Text="{Binding Username}" u:FormItem.Label="Username"/>
            <TextBox Text="{Binding Password}" u:FormItem.Label="Password"/>
            <Button Content="Login"
                    u:FormItem.NoLabel="True"
                    Theme="{DynamicResource SolidButton}"
                    HorizontalAlignment="Stretch"
                    Command="{Binding LoginCommand}"/>
        </u:Form>
    </Grid>
</UserControl>
